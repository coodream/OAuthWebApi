@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>oAuth Consumer</title>
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <h1>Authz Web Consumer Sample</h1>
    <div>
        <input type="checkbox" id="ServerFetch" checked="checked"/>&nbsp;Perform OAuth Authz on server (Authorization Code)
        <br />
        <span style="font-style:italic">Uncheck to perform OAuth Authz on client (Implicit)</span>
    </div>
    <br />
    <div>
        <button id="GetValuesButton" class="btn btn-primary">Get Values</button>
        <div id="Output" class="alert alert-info">@ViewBag.Values</div>
        <script src="@Url.Content("~/Scripts/dnoa.webapisample.client.js")" type="text/javascript"></script>
        <script language="javascript">
            window.DNOA.OAuth.Client.Setup({
                GetValuesURI: '@Url.Action("GetValues")'
            })
        </script>
    </div>
</body>
</html>
